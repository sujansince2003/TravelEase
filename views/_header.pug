header.header
    .header__logo
        a(href='/')
            img(src='/img/logo.png', alt='*TravelEase Logo*')

    // Hamburger for mobile
    .header__toggle.js--nav-toggle
        span
        span
        span

    nav.nav.nav--tours
        a.nav__el(href='/') All tours

    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href='/logout') Log Out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of the User(${user.name})`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Login
            a.nav__el.nav__el--cta(href='/signup') Sign Up
